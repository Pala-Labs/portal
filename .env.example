# Environment Configuration
# Copy this file to .env and update the values accordingly
# DO NOT commit the actual .env file to version control

# Common settings
PORT=5000                    # Port on which the server will run
NODE_ENV=development         # Environment (development, production, test)

# Database settings
# Development MongoDB URI (replace [username] and [password] with actual credentials)
MONGO_URI_DEV=mongodb+srv://[username]:[password]@portal-cluster.mongodb.net/test?retryWrites=true&w=majority
# Production MongoDB URI (replace [username] and [password] with actual credentials)
MONGO_URI_PROD=mongodb+srv://[username]:[password]@portal-cluster.mongodb.net/portal-jb?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_here    # Use a strong, unique secret in production
JWT_EXPIRES_IN=24h                 # Token expiration time (24 hours)

# Logging Configuration
LOG_LEVEL=info                     # Log level (error, warn, info, debug)
LOG_FILE_PATH=logs/app.log         # Path to log file

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000        # Time window for rate limiting (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100        # Maximum requests per window

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001  # Comma-separated list of allowed origins

# Email Configuration
SMTP_HOST=smtp.example.com         # SMTP server host
SMTP_PORT=587                      # SMTP server port
SMTP_USER=your_smtp_user          # SMTP username
SMTP_PASS=your_smtp_password      # SMTP password
EMAIL_FROM=noreply@example.com     # Default sender email address

# Security Settings
BCRYPT_SALT_ROUNDS=10              # Number of salt rounds for password hashing
SESSION_SECRET=your_session_secret # Secret for session management
COOKIE_SECRET=your_cookie_secret   # Secret for cookie signing

# Feature Flags
ENABLE_SWAGGER=true                # Enable/disable Swagger documentation
ENABLE_RATE_LIMITING=true          # Enable/disable rate limiting
ENABLE_REQUEST_LOGGING=true        # Enable/disable request logging

# Cache Configuration
CACHE_TTL=3600                     # Cache time-to-live in seconds
REDIS_URL=redis://localhost:6379   # Redis connection URL (if using Redis) 